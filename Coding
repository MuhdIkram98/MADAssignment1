import 'package:flutter/material.dart';

void main() => runApp(const MyApp());

class MyApp extends StatelessWidget {
  const MyApp({Key? key}) : super(key: key);

  static const String _title = 'Fruit numbering Function';

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      title: _title,
      home: FruitNumberingWidget(),
    );
  }
}


class FruitNumberingWidget extends StatefulWidget {

  const FruitNumberingWidget({Key? key}) : super(key: key);

  @override
  State<FruitNumberingWidget> createState() => _FruitNumberingWidget();
}


class _FruitNumberingWidget extends State<FruitNumberingWidget> {

  final TextController = TextEditingController();
  int intValue = 0;
  var Fruits = ['apple', 'orange', 'rambutan'];
  String Final = '';
  void change() {
    setState(() {
      intValue = int.parse(TextController.text);
      intValue -=  1;
      Final = Fruits[intValue];
    });
  }



  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: TextField(
          controller: TextController,
          onSubmitted: (String value) async {
            await showDialog<void>(
              context: context,
              builder: (BuildContext context) {
                return AlertDialog(
                  title: const Text('This is your answer'),
                  content: Text('$Final'),
                  actions: <Widget>[
                    TextButton(
                      onPressed: () {
                        Navigator.pop(context);
                      },
                      child: const Text('OK'),
                    ),
                  ],
                );
              },
            );
          },
        ),
      ),
    );
  }
}
